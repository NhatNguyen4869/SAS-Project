    "***                Create parameters             ***;\n",
    "\n",
    "%let rpdate = %sysfunc(intnx(day, %sysfunc(today()), -1, B)); /* Get yesterday's date */\n",
    "%let rpdate_fmt = %sysfunc(putn(&rpdate, worddate.));\n",
    "%let sd = intnx('month', &rpdate., 0, 'B');\n",
    "\n",
    "%let sd_lm = intnx('month', &rpdate., -1, 'B');\n",
    "%let ed_lm = %sysfunc(min(%sysfunc(intnx(month, &rpdate, -1, S)), %sysfunc(intnx(month, &rpdate, -1, E))));\n",
    "%let ed_lm_fmt = %sysfunc(putn(&ed_lm, worddate.));\n",
    "\n",
    "%let workdir = %trim(%sysfunc(pathname(work)));\n",
    "\n",
    "***                 DATA DAILY                   ***;\n",
    "\n",
    "proc sql;\n",
    "create table DailyNSU as \n",
    "select \n",
    "\tcase \twhen nationality = \"South Korean\" then \"South Korean\"\n",
    "\t\t\twhen nationality = \"Chinese\" then \"Chinese\"\n",
    "\t\t\twhen nationality = \"Chinese, Taiwanese\" then \"Taiwanese\"\n",
    "\t\t\twhen nationality = \"Australian\" then \"Australian\"\n",
    "\t\t\twhen nationality = \"Japanese\" then \"Japanese\"\n",
    "\t\t\twhen nationality = \"Indonesian\" then \"Indonesian\"\n",
    "\t\t\twhen nationality = \"Thai\" then \"Thai\"\n",
    "\t\t\twhen nationality = \"American\" then \"American\"\n",
    "\t\t\twhen nationality = \"Singaporean\" then \"SG MY\"\n",
    "\t\t\twhen nationality = \"Malaysian\" then \"SG MY\"\n",
    "\t\t\twhen nationality = \"Hong Kong, Hong Kongese\" then \"HK MO\"\n",
    "\t\t\twhen nationality = \"Macanese, Chinese\" then \"HK MO\"\n",
    "\t\t\telse \"Others\"\n",
    "\tend as Nationality,\n",
    "\tCurrentTier, count(MemberID) as NSU\n",
    "from SGMK.PP_PATRONPROFILE\n",
    "where SignUpDate=&rpdate. and LastName ~= 'DAY PASS'\n",
    "group by 1, 2\n",
    ";quit;\n",
    "\n",
    "proc transpose data=DailyNSU out=daily(drop=_name_);\n",
    "    by Nationality;\n",
    "    id CurrentTier;\n",
    "    var NSU;\n",
    "run;\n",
    "/* Define the expected column names */\n",
    "%let expected_columns = EssentialNonGame Prestige Club Elite Infinite Total;\n",
    "\n",
    "/* Create a list of valid columns from the dataset */\n",
    "proc sql noprint;\n",
    "    select name \n",
    "    into :existing_columns separated by ' '\n",
    "    from dictionary.columns\n",
    "    where libname=\"WORK\" and memname=\"DAILY\" and type=\"num\";\n",
    "quit;\n",
    "\n",
    "/* Create a macro to handle missing columns */\n",
    "%macro add_missing_columns;\n",
    "    %local col;\n",
    "    %do i = 1 %to %sysfunc(countw(&expected_columns.));\n",
    "        %let col = %scan(&expected_columns., &i.);\n",
    "        \n",
    "        %if %index(&existing_columns., &col.) = 0 %then %do;\n",
    "            %put NOTE: Column &col. is missing. Creating it with default value 0.;\n",
    "            data Daily;\n",
    "                set Daily;\n",
    "                &col. = 0;\n",
    "            run;\n",
    "        %end;\n",
    "    %end;\n",
    "%mend add_missing_columns;\n",
    "\n",
    "/* Run the macro to add missing columns */\n",
    "%add_missing_columns;\n",
    "\n",
    "/* Replace missing values (.) with 0 */\n",
    "proc sql;\n",
    "    create table result_Replaced as\n",
    "    select Nationality,\n",
    "           coalesce(EssentialNonGame, 0) as EssentialNonGame,\n",
    "           coalesce(Prestige, 0) as Prestige,\n",
    "           coalesce(Club, 0) as Club,\n",
    "           coalesce(Elite, 0) as Elite,\n",
    "           coalesce(Infinite, 0) as Infinite\n",
    "    from Daily;\n",
    "quit;\n",
    "/* Add a Total Column */\n",
    "data daily11;\n",
    "    set result_Replaced;\n",
    "    Total = sum(of _numeric_); /* Sum across all numeric columns (tiers) */\n",
    "run;\n",
    "proc sql;\n",
    "create table daily1 as \n",
    "select Nationality, Prestige, Elite, Club, Infinite, \n",
    "Total -  EssentialNonGame as Gaming,\n",
    "EssentialNonGame as NonGaming, Total from daily11;quit;\n",
    "/* Create a Total Row */\n",
    "proc summary data=daily1 nway;\n",
    "    var _numeric_;\n",
    "    output out=TotalRow (drop=_TYPE_ _FREQ_) sum=;\n",
    "run;\n",
    "/* Assign \"Overall\" as the RegionGroup for the Total Row */\n",
    "data TotalRow;\n",
    "    set TotalRow;\n",
    "    Nationality = \"Total\"; \n",
    "run;\n",
    "data Result_Daily;\n",
    "    set daily1 TotalRow; /* Append TotalRow to daily1 */\n",
    "run;\n",
    "data result_daily_reordered;\n",
    "    set Result_Daily;\n",
    "    if Nationality = \"Total\" then OrderVar = 2;   /* Last row */\n",
    "    else if Nationality = \"Others\" then OrderVar = 1.5; /* Move \"Others\" above Total */\n",
    "    else OrderVar = 1;  /* Keep all other rows in current order */\n",
    "run;\n",
    "\n",
    "/* Step 2: Sort the data */\n",
    "proc sort data=result_daily_reordered out=result_daily_final(drop=OrderVar);\n",
    "    by OrderVar;\n",
    "run;\n",
    "proc sql;\n",
    "    drop table DailyNSU, TotalRow, daily1, daily11,\n",
    "\t\t\t\tDaily, result_replaced, result_daily_reordered, Result_Daily;\n",
    "quit;\n",
    "\n",
    "***                    DATA MTD                      ***;\n",
    "\n",
    "proc sql;\n",
    "create table mtdNSU as\n",
    "select \n",
    "\tcase \twhen nationality = \"South Korean\" then \"South Korean\"\n",
    "\t\t\twhen nationality = \"Chinese\" then \"Chinese\"\n",
    "\t\t\twhen nationality = \"Chinese, Taiwanese\" then \"Taiwanese\"\n",
    "\t\t\twhen nationality = \"Australian\" then \"Australian\"\n",
    "\t\t\twhen nationality = \"Japanese\" then \"Japanese\"\n",
    "\t\t\twhen nationality = \"Indonesian\" then \"Indonesian\"\n",
    "\t\t\twhen nationality = \"Thai\" then \"Thai\"\n",
    "\t\t\twhen nationality = \"American\" then \"American\"\n",
    "\t\t\twhen nationality = \"Singaporean\" then \"SG MY\"\n",
    "\t\t\twhen nationality = \"Malaysian\" then \"SG MY\"\n",
    "\t\t\twhen nationality = \"Hong Kong, Hong Kongese\" then \"HK MO\"\n",
    "\t\t\twhen nationality = \"Macanese, Chinese\" then \"HK MO\"\n",
    "\t\t\telse \"Others\"\n",
    "\tend as Nationality,\n",
    "\tCurrentTier, count(MemberID) as NSU\n",
    "from SGMK.PP_PATRONPROFILE\n",
    "where \tSignUpDate>=&sd. and SignUpDate <= &rpdate. \n",
    "\t\tand LastName ~= 'DAY PASS'\n",
    "group by 1, 2\n",
    ";quit;\n",
    "\n",
    "proc transpose data=mtdNSU out=mtd(drop=_name_);\n",
    "    by Nationality;\n",
    "    id CurrentTier;\n",
    "    var NSU;\n",
    "run;\n",
    "/* Define the expected column names */\n",
    "%let expected_columns = EssentialNonGame Prestige Club Elite Infinite Total;\n",
    "\n",
    "/* Create a list of valid columns from the dataset */\n",
    "proc sql noprint;\n",
    "    select name \n",
    "    into :existing_columns separated by ' '\n",
    "    from dictionary.columns\n",
    "    where libname=\"WORK\" and memname=\"MTD\" and type=\"num\";\n",
    "quit;\n",
    "\n",
    "/* Create a macro to handle missing columns */\n",
    "%macro add_missing_columns;\n",
    "    %local col;\n",
    "    %do i = 1 %to %sysfunc(countw(&expected_columns.));\n",
    "        %let col = %scan(&expected_columns., &i.);\n",
    "        %if %index(&existing_columns., &col.) = 0 %then %do;\n",
    "            %put NOTE: Column &col. is missing. Creating it with default value 0.;\n",
    "            data mtd;\n",
    "                set mtd;\n",
    "                &col. = 0;\n",
    "            run;\n",
    "        %end;\n",
    "    %end;\n",
    "%mend add_missing_columns;\n",
    "\n",
    "/* Run the macro to add missing columns */\n",
    "%add_missing_columns;\n",
    "\n",
    "/* Replace missing values (.) with 0 */\n",
    "proc sql;\n",
    "    create table result_Replaced as\n",
    "    select Nationality,\n",
    "           coalesce(EssentialNonGame, 0) as EssentialNonGame,\n",
    "           coalesce(Prestige, 0) as Prestige,\n",
    "           coalesce(Club, 0) as Club,\n",
    "           coalesce(Elite, 0) as Elite,\n",
    "           coalesce(Infinite, 0) as Infinite\n",
    "    from mtd;\n",
    "quit;\n",
    "/* Add a Total Column */\n",
    "data mtd12;\n",
    "    set result_Replaced;\n",
    "    Total = sum(of _numeric_); /* Sum across all numeric columns (tiers) */\n",
    "run;\n",
    "proc sql;\n",
    "create table mtd11 as \n",
    "select Nationality, Prestige, Elite, Club, Infinite, \n",
    "Total -  EssentialNonGame as Gaming,\n",
    "EssentialNonGame as NonGaming, Total from mtd12;quit;\n",
    "/* Create a Total Row */\n",
    "proc summary data=mtd11 nway;\n",
    "    var _numeric_;\n",
    "    output out=TotalRow (drop=_TYPE_ _FREQ_) sum=;\n",
    "run;\n",
    "\n",
    "/* Assign \"Overall\" as the RegionGroup for the Total Row */\n",
    "data TotalRow;\n",
    "    set TotalRow;\n",
    "    Nationality = \"Total\"; \n",
    "run;\n",
    "data Result_MTD;\n",
    "    set mtd11 TotalRow; /* Append TotalRow to daily1 */\n",
    "run;\n",
    "/* Step 1: Assign an order variable */\n",
    "data result_MTD_reordered;\n",
    "    set result_MTD;\n",
    "    if Nationality = \"Total\" then OrderVar = 2;   /* Last row */\n",
    "    else if Nationality = \"Others\" then OrderVar = 1.5; /* Move \"Others\" above Total */\n",
    "    else OrderVar = 1;  /* Keep all other rows in current order */\n",
    "run;\n",
    "\n",
    "/* Step 2: Sort the data */\n",
    "proc sort data=result_MTD_reordered out=result_MTD_final(drop=OrderVar);\n",
    "    by OrderVar;\n",
    "run;\n",
    "proc sql;\n",
    "    drop table mtdNSU, TotalRow, mtd, mtd11, result_replaced,\n",
    "\t\t\t\tresult_MTD, result_MTD_reordered, mtd12;\n",
    "quit;\n",
    "\n",
    "***           CREATE BAR CHART            ***;\n",
    "\n",
    "proc sql;\n",
    "create table lmNSU as\n",
    "select \n",
    "\tcase \n",
    "\t\twhen CurrentTier = \"EssentialNonGame\" then \"NonGaming\" \n",
    "\t\telse \"Gaming\"\n",
    "\tend as CurrentTier,\n",
    "\tcount(MemberID) as NSU\n",
    "from SGMK.PP_PATRONPROFILE\n",
    "where \tSignUpDate>=&sd_lm. and SignUpDate <= &ed_lm. \n",
    "\t\tand LastName ~= 'DAY PASS'\n",
    "group by 1\n",
    ";quit;\n",
    "\n",
    "proc sql;\n",
    "create table tmNSU as\n",
    "select \n",
    "\tcase \n",
    "\t\twhen CurrentTier = \"EssentialNonGame\" then \"NonGaming\" \n",
    "\t\telse \"Gaming\"\n",
    "\tend as CurrentTier,\n",
    "\tcount(MemberID) as NSU\n",
    "from SGMK.PP_PATRONPROFILE\n",
    "where \tSignUpDate>=&sd. and SignUpDate <= &rpdate. \n",
    "\t\tand LastName ~= 'DAY PASS'\n",
    "group by 1\n",
    ";quit;\n",
    "\n",
    "/* Step 1: Add Labels with Sufficient Length for Type */\n",
    "data tmNSU_labeled;\n",
    "    length Type $30;  /* Ensure sufficient space for long labels */\n",
    "    set tmNSU;\n",
    "    Type = \"Current month\"; /* Use catt() to avoid extra spaces */\n",
    "run;\n",
    "\n",
    "data lmNSU_labeled;\n",
    "    length Type $30;  /* Ensure sufficient space for long labels */\n",
    "    set lmNSU;\n",
    "    Type = \"Last month\";\n",
    "run;\n",
    "\n",
    "/* Step 2: Combine Both Tables */\n",
    "data combined_NSU;\n",
    "    set tmNSU_labeled lmNSU_labeled;\n",
    "run;\n",
    "ods listing gpath=\"&workdir.\";\n",
    "ods graphics on/ reset=index imagefmt=png imagename='NSU_Bar_Chart' width=800px height=300px noborder;\n",
    "title 'Comparison of MTD Membership NSU (Current Month vs. Last Month)';\n",
    "\n",
    "proc sgplot data=combined_NSU noborder;\n",
    "\tformat NSU comma12.;\n",
    "    hbar Type / response=NSU \n",
    "                group=CurrentTier \n",
    "                groupdisplay=stack \n",
    "\t\t\t\tseglabel\n",
    "\t\t\t\tseglabelattrs=(size=10 weight=normal color=black)\n",
    "                datalabel\n",
    "\t\t\t\tdatalabelattrs=(size=10 weight=bold color=black);\n",
    "    xaxis display=(nolabel);\n",
    "    yaxis display=(nolabel) valuesattrs=(size=10 weight=normal color=black);\n",
    "    title \"Comparison of MTD Membership NSU (Current Month vs. Last Month)\";\n",
    "run;\n",
    "\n",
    "ods layout end;\n",
    "ods graphics off;\n",
    "\n",
    "\n",
    "*** CREATING TEMPLATE FOR SENDING EMAIL ***;\n",
    "\n",
    "proc template;\n",
    "   define style styles.test;\n",
    "      parent=styles.htmlblue;\n",
    "      class systitleandfootercontainer /\n",
    "            htmlstyle=\"border:none\";\n",
    "   end;\n",
    "run;\n",
    "\n",
    "options emailsys=smtp /*emailhost=\"10.102.0.20\"*/;\n",
    "\n",
    "filename myemail email\n",
    "to= ('person1@company.com')\n",
    "cc= ('person2@company.com' 'person3@company.com' 'person4@company.com'\n",
    "from='autoreport@company.com'\n",
    "type='text/html' subject=\"Daily Membership NSU Summary on &rpdate_fmt.\"\n",
    "attach=(\"&workdir.\\NSU_Bar_Chart.png\" inlined='barchart');\n",
    "ods html file=myemail style=styles.test;\n",
    "\n",
    "*** TEMPLATE ***;\n",
    "\n",
    "proc report data=result_daily_final nowd \n",
    "\tstyle(report)={frame=box rules=all bordercolor=#333333 borderwidth=1px}\n",
    "    style(header)={just=c background=#203764 foreground=white fontweight=bold}\n",
    "    style(column)={just=right};\n",
    "compute Nationality;\n",
    "        if Nationality = \"Total\" then \n",
    "            call define(_row_, \"style\", \"style={background=#f8eece foreground=black fontweight=bold}\");\n",
    "    endcomp;\n",
    "compute Total;\n",
    "    call define(_col_, \"style\", \"style={background=#f8eece foreground=black fontweight=bold}\"); /* Gold background */\n",
    "endcomp;\n",
    "\n",
    "compute Gaming;\n",
    "    call define(_col_, \"style\", \"style={foreground=black fontweight=bold}\");\n",
    "endcomp;\n",
    "\n",
    "compute NonGaming;\n",
    "    call define(_col_, \"style\", \"style={foreground=black fontweight=bold}\");\n",
    "endcomp;\n",
    "define Nationality / display style(column)={just=center};\n",
    "define Prestige / display format=comma12.;\n",
    "define Club / display format=comma12.;\n",
    "define Elite / display format=comma12.;\n",
    "define Infinite / display format=comma12.;\n",
    "define Gaming / display format=comma12.;\n",
    "define NonGaming / display format=comma12.;\n",
    "define Total / display format=comma12.;\n",
    "title font='Calibri' bold height=15pt justify=center \"Daily NSU by Nationality and Current Tier on &rpdate_fmt.\";\n",
    "run;\n",
    "\n",
    "proc report data=result_MTD_final nowd \n",
    "\tstyle(report)={frame=box rules=all bordercolor=#333333 borderwidth=1px}\n",
    "    style(header)={just=c background=#203764 foreground=white fontweight=bold}\n",
    "    style(column)={just=right}; \n",
    "compute Nationality;\n",
    "        if Nationality = \"Total\" then \n",
    "            call define(_row_, \"style\", \"style={background=#f8eece foreground=black fontweight=bold}\");\n",
    "    endcomp;\n",
    "compute Total;\n",
    "    call define(_col_, \"style\", \"style={background=#f8eece foreground=black fontweight=bold}\"); /* Gold background */\n",
    "endcomp;\n",
    "\n",
    "compute Gaming;\n",
    "    call define(_col_, \"style\", \"style={foreground=black fontweight=bold}\");\n",
    "endcomp;\n",
    "\n",
    "compute NonGaming;\n",
    "    call define(_col_, \"style\", \"style={foreground=black fontweight=bold}\");\n",
    "endcomp;\n",
    "define Nationality / display style(column)={just=center};\n",
    "define Prestige / display format=comma12.;\n",
    "define Club / display format=comma12.;\n",
    "define Elite / display format=comma12.;\n",
    "define Infinite / display format=comma12.;\n",
    "define Gaming / display format=comma12.;\n",
    "define NonGaming / display format=comma12.;\n",
    "define Total / display format=comma12.;\n",
    "\n",
    "title font='Calibri' bold height=15pt justify=center \"MTD NSU by Nationality and Current Tier to &rpdate_fmt.\";\n",
    "run;\n",
    "\n",
    "ods html text='<p style=\"font-family:Calibri; font-size:14pt; font-weight:bold; \n",
    "                         text-align:center; margin-bottom:10px; border:none; outline:none;\">\n",
    "               Comparison of MTD Membership NSU (Current Month vs. Last Month)\n",
    "              </p>';\n",
    "\n",
    "ods html text='<div style=\"text-align:center;\">\n",
    "                 <img src=\"cid:barchart\" alt=\"NSU Chart\" \n",
    "                      style=\"width:100%; max-width:800px; border:none; display:block; margin:auto;\">\n",
    "               </div>';\n",
    "ods html close;\n",
    "ods listing;\n",
    "filename myemail clear;"
   ]
