   "source": [
    "***                Create parameters             ***;\n",
    "\n",
    "%let rpdate = %sysfunc(intnx(day, %sysfunc(today()), -1, B));\n",
    "%let sd_1 = %sysfunc(intnx(day, %sysfunc(today()), -7, B));/* Get yesterday's date */\n",
    "%let rpdate_fmt = %sysfunc(putn(&rpdate, worddate.));\n",
    "%let sd_fmt = %sysfunc(putn(&sd_1, worddate.));\n",
    "\n",
    "*** CREATING TEMPLATE FOR SENDING EMAIL ***;\n",
    "\n",
    "proc template;\n",
    "   define style styles.test;\n",
    "      parent=styles.htmlblue;\n",
    "      class systitleandfootercontainer /\n",
    "            htmlstyle=\"border:none\";\n",
    "   end;\n",
    "run;\n",
    "\n",
    "options emailsys=smtp /*emailhost=\"10.102.0.20\"*/;\n",
    "\n",
    "filename myemail email\n",
    "to= ('person1@company.com')\n",
    "/*cc= ('person2@company.com' 'person3@company.com')*/\n",
    "from='autoreport@company.com'\n",
    "type='text/html' subject=\"Weekly HPR, Ratings and Gatings report (&sd_fmt. - &rpdate_fmt.)\";\n",
    "/*attach=(\"&workdir.\\NSU_Bar_Chart.png\" inlined='barchart');*/\n",
    "ods html file=myemail style=styles.test;\n",
    "\n",
    "\n",
    "*** TEMPLATE ***;\n",
    "\n",
    "***HPR***;\n",
    "proc report data=HPR nowd \n",
    "\tstyle(report)={frame=box rules=all bordercolor=#333333 borderwidth=1px}\n",
    "    style(header)={just=c background=#203764 foreground=white fontweight=bold}\n",
    "    style(column)={just=right};\n",
    "\n",
    "compute Total;\n",
    "    call define(_col_, \"style\", \"style={background=#f8eece foreground=black fontweight=bold}\"); /* Gold background */\n",
    "endcomp;\n",
    "define \"Gaming HPR Membership\"n / display format=comma12.;\n",
    "define \"Non-Gaming HPR Membership\"n / display format=comma12.;\n",
    "define Total / display format=comma12.;\n",
    "title font='Calibri' bold height=15pt justify=center \"HPR Memberships signed up\";\n",
    "run;\n",
    "***Gating Split***;\n",
    "proc report data=gating_split nowd \n",
    "\tstyle(report)={frame=box rules=all bordercolor=#333333 borderwidth=1px}\n",
    "    style(header)={just=c background=#203764 foreground=white fontweight=bold}\n",
    "    style(column)={just=right};\n",
    "\n",
    "compute Total;\n",
    "    call define(_col_, \"style\", \"style={background=#f8eece foreground=black fontweight=bold}\"); /* Gold background */\n",
    "endcomp;\n",
    "define Period / display style(column)={just=center};\n",
    "define FITO / display format=comma12.;\n",
    "define Mass / display format=comma12.;\n",
    "define Both / display format=comma12.;\n",
    "define Total / display format=comma12.;\n",
    "title font='Calibri' bold height=15pt justify=center \"Gatings split\";\n",
    "run;\n",
    "***Rating***;\n",
    "data RatedPax0All;\n",
    "    length Period $9; \n",
    "    set RatedPax0(in=a) mRatedPax0(in=b);\n",
    "    if a then Period = \"Last week\";\n",
    "    else if b then Period = \"MTD\";\n",
    "run;\n",
    "data RatedPax1All;\n",
    "    length Period $9;\n",
    "    set RatedPax1(in=a) mRatedPax1(in=b);\n",
    "    if a then Period = \"Last week\";\n",
    "    else if b then Period = \"MTD\";\n",
    "run;\n",
    "data RatedPax2All;\n",
    "    length Period $9;\n",
    "    set RatedPax2(in=a) mRatedPax2(in=b);\n",
    "    if a then Period = \"Last week\";\n",
    "    else if b then Period = \"MTD\";\n",
    "run;\n",
    "proc report data=RatedPax0All nowd \n",
    "\tstyle(report)={frame=box rules=all bordercolor=#333333 borderwidth=1px}\n",
    "    style(header)={just=c background=#203764 foreground=white fontweight=bold}\n",
    "    style(column)={just=right};\n",
    "\n",
    "compute Total;\n",
    "    call define(_col_, \"style\", \"style={background=#f8eece foreground=black fontweight=bold}\"); /* Gold background */\n",
    "endcomp;\n",
    "define Period / display style(column)={just=center};\n",
    "define VIP / display format=comma12.;\n",
    "define Mass / display format=comma12.;\n",
    "define Both / display format=comma12.;\n",
    "define Total / display format=comma12.;\n",
    "title font='Calibri' bold height=15pt justify=center \"Rating splitted by Mass and VIP\";\n",
    "run;\n",
    "proc report data=RatedPax1All nowd \n",
    "\tstyle(report)={frame=box rules=all bordercolor=#333333 borderwidth=1px}\n",
    "    style(header)={just=c background=#203764 foreground=white fontweight=bold}\n",
    "    style(column)={just=right};\n",
    "\n",
    "compute Total;\n",
    "    call define(_col_, \"style\", \"style={background=#f8eece foreground=black fontweight=bold}\"); /* Gold background */\n",
    "endcomp;\n",
    "define Period / display style(column)={just=center};\n",
    "define House / display format=comma12.;\n",
    "define ITO / display format=comma12.;\n",
    "define Both / display format=comma12.;\n",
    "define Total / display format=comma12.;\n",
    "title font='Calibri' bold height=15pt justify=center \"Rating splitted by House and ITO\";\n",
    "run;\n",
    "proc report data=RatedPax2All nowd \n",
    "\tstyle(report)={frame=box rules=all bordercolor=#333333 borderwidth=1px}\n",
    "    style(header)={just=c background=#203764 foreground=white fontweight=bold}\n",
    "    style(column)={just=right};\n",
    "compute Total;\n",
    "    call define(_col_, \"style\", \"style={background=#f8eece foreground=black fontweight=bold}\"); \n",
    "endcomp;\n",
    "define Period / display style(column)={just=center};\n",
    "define Mass / display format=comma12.;\n",
    "define PD / display format=comma12.;\n",
    "define CITO / display format=comma12.;\n",
    "define FITO / display format=comma12.;\n",
    "define Total / display format=comma12.;\n",
    "title font='Calibri' bold height=15pt justify=center \"Rating by Dominant Segment\";\n",
    "run;\n",
    "ods html close;\n",
    "ods listing;\n",
    "filename myemail clear;"
   ]
  }
